            </MenuItem>
            <MenuItem Header="Tìm kiếm" Name="timKiem" Click="timKiem_Click"/>
            <MenuItem Header="Báo cáo" Name="baoCao" Click="baoCao_Click"/>
            <MenuItem Header="Cửa sổ">
                <MenuItem Header="Sắp xếp">
                    <MenuItem Header="Cascade"/>
                </MenuItem>
                <MenuItem Header="Đóng tất cả"/>
                <Separator/>
            </MenuItem>
            <MenuItem Header="Hướng dẫn"/>
        </Menu>
        <mdi:MdiContainer Name="mdiContainer">

        </mdi:MdiContainer>
    </DockPanel>
</Window>
